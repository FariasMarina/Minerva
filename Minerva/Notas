import sqlite3
import datetime

banco = sqlite3.connect('BancoNotas.db')
cursor = banco.cursor()

def criar_banco():
    cursor.execute('CREATE TABLE IF NOT EXISTS "Notas"('
                   '"ID" integer primary key AUTOINCREMENT,'
                   '"Data" text not null,'
                   '"Notas" text not null)')
    banco.commit()
    return print('Banco criado')

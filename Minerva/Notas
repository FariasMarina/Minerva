def mostrar_nota(dia):
    cursor.execute(f"SELECT Notas FROM Notas WHERE data='{dia}'")
    res = cursor.fetchall()
    for i in res:
        tex = str(i)
        texto = tex.replace('(','').replace(')','').replace(',','')
        print(texto)
